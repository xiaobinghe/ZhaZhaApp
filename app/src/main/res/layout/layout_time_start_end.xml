<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingBottom="20px"
    android:paddingTop="20px"
    android:visibility="visible"
    tools:showIn="@layout/activity_tools_order">

    <LinearLayout
        android:id="@+id/ll_time_start"
        android:layout_width="0px"
        android:layout_height="90px"
        android:layout_marginLeft="45px"
        android:layout_weight="1"
        android:background="@drawable/bg_gray_line"
        android:clickable="true"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_time_content_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2017-05-12"
            android:textColor="@color/font_black"
            android:textSize="42px"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="30px"
            android:src="@drawable/updown" />
    </LinearLayout>


    <View
        android:layout_width="21px"
        android:layout_height="3px"
        android:layout_gravity="center_vertical"
        android:layout_margin="30px"

        android:layout_marginLeft="30px"
        android:background="@color/black_line" />

    <LinearLayout
        android:id="@+id/ll_time_end"
        android:layout_width="0px"
        android:layout_height="90px"
        android:layout_marginRight="45px"
        android:layout_weight="1"
        android:background="@drawable/bg_gray_line"
        android:clickable="true"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_time_content_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2017-05-12"
            android:textColor="@color/font_black"
            android:textSize="42px"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="30px"
            android:src="@drawable/updown" />

    </LinearLayout>
</LinearLayout>