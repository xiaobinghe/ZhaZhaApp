<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/dp_25">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:src="@drawable/class_pop_top"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_class_group_pop"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_class_belong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="升序"
            android:textColor="@color/bg_blue_light"
            android:textSize="12sp"/>
        <View android:layout_width="match_parent" android:layout_height="1px"
              android:background="@color/white"/>
        <TextView
            android:id="@+id/tv_class_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="降序"
            android:textColor="@color/bg_blue_light"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>