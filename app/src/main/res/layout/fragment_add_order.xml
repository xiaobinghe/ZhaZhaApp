<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.locensate.letnetwork.main.ui.addorder.AddOrderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:paddingTop="5dp"
            android:text="服务商"
            android:textColor="@color/font_black"
            android:textSize="16sp"
            android:textStyle="bold"/>


        <LinearLayout
            android:id="@+id/ll_enterprise_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_create_order_enterprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_15"
                android:text="北京罗圣森特节能科技有限公司"
                android:textColor="@color/font_black"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_enterprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/down_blue"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="20dp"
            android:text="相关设备"
            android:textColor="@color/font_black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_add_machine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:hint="请添加设备"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:textColor="@color/font_black"
                android:textColorHint="@color/font_et_hint"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_add_machine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/add_blue"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="20dp"
            android:text="工单内容"
            android:textColor="@color/font_black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_background"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp">

            <EditText
                android:id="@+id/et_create_order_content"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:background="@null"
                android:gravity="top"
                android:hint="请添加内容"
                android:lineSpacingExtra="3dp"
                android:maxLength="200"
                android:textColor="@color/font_black"
                android:textColorHint="@color/font_et_hint"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_create_order_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="@string/font_size"
                    android:textColor="@color/font_et_hint"
                    android:textSize="9sp"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_commit_create_order"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/selector_bg_commit"
            android:clickable="true"
            android:enabled="true"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

</FrameLayout>
