<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg"
              android:orientation="vertical">

    <include layout="@layout/layout_title_only_back"/>

    <LinearLayout
        android:id="@+id/ll_group"
        android:layout_width="match_parent"
        android:layout_height="135px"
        android:background="@color/font_blue_deep">

        <TextView
            android:id="@+id/tv_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="30px"
            android:drawableRight="@drawable/drop_white"
            android:gravity="center"
            android:paddingLeft="45px"
            android:text="某钢厂"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15px"
        android:paddingLeft="45px"
        android:paddingRight="45px"
        android:paddingTop="15px">

        <LinearLayout
            android:id="@+id/ll_circle_type"
            android:layout_width="240px"
            android:layout_height="90px"
            android:background="@drawable/input_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_circle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"
                android:paddingLeft="30px"
                android:text="月"
                android:textColor="@color/font_black"
                android:textSize="42px"/>

            <ImageView
                android:id="@+id/iv_circle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="45px"
                android:src="@drawable/updown"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_circle_time"
            android:layout_width="wrap_content"
            android:layout_height="90px"
            android:layout_marginLeft="30px"
            android:layout_weight="1"
            android:background="@drawable/input_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_circle_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"

                android:paddingLeft="30px"
                android:text="2017-05"
                android:textColor="@color/font_black"
                android:textSize="42px"/>

            <ImageView
                android:id="@+id/iv_circle_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="45px"
                android:src="@drawable/updown"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/ground_line"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="270px"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="班组名称"
                android:textColor="@color/bg_blue_light"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </FrameLayout>


        <FrameLayout
            android:layout_width="260px"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="工作时间"
                android:textColor="@color/bg_blue_light"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="268px"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="电机运行效率"
                android:textColor="@color/bg_blue_light"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </FrameLayout>


        <FrameLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="能耗(kWh)"
                android:textColor="@color/bg_blue_light"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </FrameLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_group_energy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>