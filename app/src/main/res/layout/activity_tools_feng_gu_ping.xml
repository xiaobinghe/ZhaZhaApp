<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg"
              android:orientation="vertical"
              tools:context="com.locensate.letnetwork.main.ui.tools.ToolsFengGuPingActivity">

    <include layout="@layout/layout_title_only_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135px"
        android:background="@color/font_blue_deep">

        <TextView
            android:id="@+id/tv_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="30px"
            android:drawableRight="@drawable/drop_white"
            android:gravity="center"
            android:paddingLeft="45px"
            android:text="某钢厂"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="30px"
        android:paddingLeft="45px"
        android:paddingRight="45px"
        android:paddingTop="30px">

        <LinearLayout
            android:id="@+id/ll_circle_type"
            android:layout_width="240px"
            android:layout_height="90px"
            android:background="@drawable/input_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_circle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"
                android:paddingLeft="30px"
                android:text="月"
                android:textColor="@color/font_black"
                android:textSize="42px"/>

            <ImageView
                android:id="@+id/iv_circle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="45px"
                android:src="@drawable/updown"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_circle_time"
            android:layout_width="wrap_content"
            android:layout_height="90px"
            android:layout_marginLeft="30px"
            android:layout_weight="1"
            android:background="@drawable/input_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_circle_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"
                android:paddingLeft="30px"
                android:text="2017-05"
                android:textColor="@color/font_black"
                android:textSize="42px"/>

            <ImageView
                android:id="@+id/iv_circle_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="45px"
                android:src="@drawable/updown"/>

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        app:cardCornerRadius="10px">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:layout_marginTop="30px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <View
                    android:layout_width="9px"
                    android:layout_height="30px"
                    android:background="@color/pie_green"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="峰电"
                    android:textColor="@color/font_black"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="144px"
                    android:text="用电量"
                    android:textColor="@color/font_gray"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_weight="1"
                    android:text="32000kWh"
                    android:textColor="@color/font_blue_deep"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="144px"
                    android:text="占比"
                    android:textColor="@color/font_gray"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="60px"
                    android:text="40%"
                    android:textColor="@color/font_blue_deep"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="75px"
                android:layout_marginTop="75px"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <View
                    android:layout_width="9px"
                    android:layout_height="30px"
                    android:background="@color/pie_yellow"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="谷电"
                    android:textColor="@color/font_black"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="144px"
                    android:text="用电量"
                    android:textColor="@color/font_gray"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_weight="1"
                    android:text="20000kWh"
                    android:textColor="@color/font_blue_deep"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="144px"
                    android:text="占比"
                    android:textColor="@color/font_gray"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="60px"
                    android:text="25%"
                    android:textColor="@color/font_blue_deep"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <View
                    android:layout_width="9px"
                    android:layout_height="30px"
                    android:background="@color/pie_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:text="平电"
                    android:textColor="@color/font_black"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="144px"
                    android:text="用电量"
                    android:textColor="@color/font_gray"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_weight="1"
                    android:text="28000kWh"
                    android:textColor="@color/font_blue_deep"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="144px"
                    android:text="占比"
                    android:textColor="@color/font_gray"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="60px"
                    android:text="35%"
                    android:textColor="@color/font_blue_deep"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30px"
        android:layout_marginTop="60px"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="用电量(kWh)"
            android:textColor="@color/font_content"
            android:textSize="30px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小时电价(元/时)"
            android:textColor="@color/font_content"
            android:textSize="30px"/>

    </LinearLayout>

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/cbc_energy_feng_gu_ping"
        android:layout_width="match_parent"
        android:layout_height="550px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"/>
</LinearLayout>
