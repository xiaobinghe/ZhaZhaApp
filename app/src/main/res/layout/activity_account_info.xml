<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context="com.locensate.letnetwork.main.ui.AccountInfoActivity">

    <include layout="@layout/layout_title_only_back" />

    <LinearLayout
        android:id="@+id/ll_account_nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/btn_list_item_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/account_nike_name"
                android:drawablePadding="30px"
                android:gravity="center_vertical"
                android:text="用户名："
                android:textColor="@color/font_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/iv_account_nickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="风清扬"
                android:textColor="@color/font_black"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_account_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/btn_list_item_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/account_name"
                android:drawablePadding="30px"
                android:gravity="center_vertical"
                android:text="姓名："
                android:textColor="@color/font_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/iv_account_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="李俊"
                android:textColor="@color/font_black"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_account_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="30px"
        android:background="@drawable/btn_list_item_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/account_tel"
                android:drawablePadding="30px"
                android:gravity="center_vertical"
                android:text="电话："
                android:textColor="@color/font_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/iv_account_tel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="13252546655"
                android:textColor="@color/font_black"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_account_job"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/btn_list_item_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/account_email"
                android:drawablePadding="30px"
                android:gravity="center_vertical"
                android:text="邮箱："
                android:textColor="@color/font_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_account_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="54548545163@qq.com"
                android:textColor="@color/font_black"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_account_rq"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/btn_list_item_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/account_enterprise"
                android:drawablePadding="30px"
                android:gravity="center_vertical"
                android:text="企业："
                android:textColor="@color/font_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_account_enterprise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="北京罗圣森特节能科技有限公司"
                android:textColor="@color/font_black"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_account_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/btn_list_item_bg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/ll_reset_psw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/account_reset_psw"
                android:drawablePadding="30px"
                android:gravity="center_vertical"
                android:text="修改密码"
                android:textColor="@color/font_black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="45px"
                android:src="@drawable/into_blue" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_account_enterprise"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/btn_list_item_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_exit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/account_exit"
                    android:drawablePadding="30px"
                    android:gravity="center_vertical"
                    android:text="退出登录"
                    android:textColor="@color/font_red"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="45px"
                    android:src="@drawable/into_blue" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
