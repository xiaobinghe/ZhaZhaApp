<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ground_line"
            android:padding="@dimen/dp_15"
            android:text="工单详情"
            android:textColor="@color/font_deep_blue"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_gray_line"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_13"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_13">

            <TextView
                android:id="@+id/tv_order_detail_machine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主抽风机"
                android:textColor="@color/font_black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_order_detail_machine_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_13"
                android:text="一车间焦化厂"
                android:textColor="@color/font_black"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <TextView
                    android:id="@+id/order_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableRight="@drawable/into_blue"
                    android:paddingLeft="@dimen/dp_13"
                    android:text="详情"
                    android:textColor="@color/font_deep_blue"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_order_detail_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="斯柯达九分裤水电费和会计师"
            android:textColor="@color/font_content"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_15">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="wrap_content"
                    android:text="服务商"
                    android:textColor="@color/font_deep_blue"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_order_detail_facilitator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京罗圣森特节能科技有限公司"
                    android:textColor="@color/font_content_gray"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="wrap_content"
                    android:text="企业"
                    android:textColor="@color/font_deep_blue"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_order_detail_enterprise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="钢铁集团"
                    android:textColor="@color/font_content_gray"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textColor="@color/font_deep_blue"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_order_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="江苏省徐州凤台路"
                    android:textColor="@color/font_content_gray"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="wrap_content"
                    android:text="创建人"
                    android:textColor="@color/font_deep_blue"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_order_detail_creater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李军"
                    android:textColor="@color/font_content_gray"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dp_46"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:textColor="@color/font_deep_blue"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_order_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-05-14  12:25"
                    android:textColor="@color/font_content_gray"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>