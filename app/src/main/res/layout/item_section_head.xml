<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45"
    android:background="@color/ground_line"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">


    <TextView
        android:id="@+id/tv_section_head_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/font_deep_blue"
        android:textStyle="bold"
        android:text="运行状态"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/iv_section_head_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dp_5"
        android:src="@drawable/warn_red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_section_head_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/font_deep_blue"
            android:textStyle="bold"
            android:drawablePadding="@dimen/dp_5"
            android:text="远程参数"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</LinearLayout>