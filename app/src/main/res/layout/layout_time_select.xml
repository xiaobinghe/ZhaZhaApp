<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="138px"
              android:orientation="horizontal"
              android:paddingLeft="45px"
              android:paddingRight="45px"
              android:paddingTop="48px"
    >

    <FrameLayout
        android:id="@+id/time_type"
        android:layout_width="240px"
        android:layout_height="90px"
        android:background="@drawable/bg_gray_line"
        android:clickable="true">

        <ImageView
            android:id="@+id/up_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="30px"
            android:src="@drawable/updown"/>

        <TextView
            android:id="@+id/time_type_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="小时"
            android:textColor="@color/font_black"
            android:textSize="42px"
            android:textStyle="bold"/>


    </FrameLayout>

    <LinearLayout
        android:id="@+id/time_value"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="30px"
        android:background="@drawable/bg_gray_line">

        <TextView
            android:id="@+id/tv_time_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2017-04-09 15时"
            android:textColor="@color/font_black"
            android:textSize="42px"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30px"
            android:src="@drawable/calendar"/>
    </LinearLayout>


</LinearLayout>