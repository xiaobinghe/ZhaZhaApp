<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前负载："
            android:textColor="@color/font_content"
            android:textSize="36px"/>

        <TextView
            android:id="@+id/tv_energy_load_current_efficiency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.36"
            android:textColor="@color/font_blue_deep"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:text="平均负载："
            android:textColor="@color/font_content"
            android:textSize="36px"/>

        <TextView
            android:id="@+id/tv_energy_load_average_efficiency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0.32"
            android:textColor="@color/font_blue_deep"
            android:textSize="42px"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rg_switch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_percent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btt_blue_white"
                    android:button="@null"
                    android:gravity="center"
                    android:text="百分比"
                    android:textColor="@color/selector_text_color"
                    android:textSize="10sp"/>

                <RadioButton
                    android:id="@+id/rb_load_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btt_blue_white_right"
                    android:button="@null"
                    android:gravity="center"
                    android:text="负载类型"
                    android:textColor="@color/selector_text_color"
                    android:textSize="10sp"/>
            </RadioGroup>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_load_type"
        android:layout_width="match_parent"
        android:layout_height="420px"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_energy_efficiency"
            android:layout_width="360px"
            android:layout_height="360px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="45px"
            android:layout_marginRight="45px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8px"
                android:paddingTop="7px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/red_point"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:text="空载："
                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/tv_energy_load_time3"
                    android:layout_width="182px"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:text="100h"
                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/tv_energy_load_percent3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13.9%"
                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8px"
                android:paddingTop="7px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/orange_point"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:text="轻载："
                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/tv_energy_load_time5"
                    android:layout_width="182px"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:text="438h"

                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/tv_energy_load_percent5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60.8%"
                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8px"
                android:paddingTop="7px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blue_point"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:text="半载："
                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/tv_energy_load_time6"
                    android:layout_width="182px"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:text="150h"

                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/tv_energy_load_percent6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20.8%"
                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8px"
                android:paddingTop="7px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/green_point"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:text="重载："
                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/tv_energy_load_time1"
                    android:layout_width="182px"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:text="10h"
                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/tv_energy_load_percent1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.4%"
                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8px"
                android:paddingTop="7px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yellow_point"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:text="过载："
                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/tv_energy_load_time2"
                    android:layout_width="182px"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:text="2h"
                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/tv_energy_load_percent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.3%"
                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8px"
                android:paddingTop="7px">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gray_point"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:text="停止："
                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/tv_energy_load_time4"
                    android:layout_width="182px"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:text="20h"

                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

                <TextView
                    android:id="@+id/tv_energy_load_percent4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.8%"
                    android:textColor="@color/font_gray_white"
                    android:textSize="30px"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_percent"
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:visibility="gone">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.github.mikephil.charting.charts.BarChart>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="45px"
        android:layout_marginRight="45px"
        android:background="@color/black_line"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="45px">

        <LinearLayout
            android:id="@+id/ll_energy_lose_electric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="45px"
            android:paddingLeft="45px"
            android:paddingRight="30px"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实时"
                    android:textColor="@color/font_light_gray"
                    android:textSize="36px"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="4px"
                    android:layout_height="36px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@color/font_light_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="平均"
                    android:textColor="@color/font_light_gray"
                    android:textSize="36px"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/iv_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="45px"
                    android:src="@drawable/switch_icon"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="单位  (无)"
                android:textColor="@color/font_content"
                android:textSize="30px"
                android:textStyle="bold"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lc_energy_load"
                android:layout_width="match_parent"
                android:layout_height="500px"/>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>
