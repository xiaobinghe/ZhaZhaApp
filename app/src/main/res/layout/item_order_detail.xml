<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_20">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_33"
        android:background="@drawable/shape_bg_communicate_time"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_7"
        android:paddingRight="@dimen/dp_7">

        <TextView
            android:id="@+id/tv_communicate_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3月2日"
            android:textColor="@color/font_deep_blue"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_communicate_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:text="周日"
            android:textColor="@color/font_deep_blue"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_communicate_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/record"
                android:drawablePadding="@dimen/dp_5"
                android:text="李军"
                android:textColor="@color/font_deep_blue"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加了跟进记录"
                android:textColor="@color/font_content"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_communicate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/time_communicate"
            android:drawablePadding="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:text="13:15"
            android:textColor="@color/font_content"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_communicate_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="——"
            android:textColor="@color/font_content"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_line" />
</LinearLayout>