<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <include layout="@layout/layout_title_only_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360px"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_tools_look_board"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="15px"
            android:drawableTop="@drawable/look_board"
            android:gravity="center"
            android:text="看板"
            android:textColor="@color/font_black"
            android:textSize="42px"
            android:textStyle="bold" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black_line" />

        <TextView
            android:id="@+id/tv_tools_feng_gu_ping"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"

            android:drawablePadding="15px"
            android:drawableTop="@drawable/feng_gu_ping"
            android:gravity="center"
            android:text="峰谷平"
            android:textColor="@color/font_black"
            android:textSize="42px"
            android:textStyle="bold" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black_line" />

        <TextView
            android:id="@+id/tv_tools_group_energy_efficiency"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"

            android:drawablePadding="15px"
            android:drawableTop="@drawable/group_efficiency"
            android:gravity="center"
            android:text="班组能效"
            android:textColor="@color/font_black"
            android:textSize="42px"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="30px"
        android:background="@color/black_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="212px"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_tools_alert"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"

            android:drawablePadding="15px"
            android:drawableTop="@drawable/tools_alert"
            android:gravity="center"
            android:text="报警"
            android:textColor="@color/font_black"
            android:textSize="39px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black_line" />

        <TextView
            android:id="@+id/tv_tools_energy_efficiency"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"

            android:drawablePadding="15px"
            android:drawableTop="@drawable/tools_energy_efficieny"
            android:gravity="center"
            android:text="能效"
            android:textColor="@color/font_black"
            android:textSize="39px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black_line" />

        <TextView
            android:id="@+id/tv_tools_order"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="15px"

            android:drawableTop="@drawable/tools_order"
            android:gravity="center"
            android:text="工单"
            android:textColor="@color/font_black"
            android:textSize="39px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black_line" />

        <TextView
            android:id="@+id/tv_tools_remind"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"

            android:drawablePadding="15px"
            android:drawableTop="@drawable/tools_remind"
            android:gravity="center"
            android:text="提醒"
            android:textColor="@color/font_black"
            android:textSize="39px" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="212px"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_tools_repair"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"

            android:drawablePadding="15px"
            android:drawableTop="@drawable/tools_repair"
            android:gravity="center"
            android:text="维修"
            android:textColor="@color/font_black"
            android:textSize="39px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black_line" />

        <TextView
            android:id="@+id/tv_tools_routing"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:clickable="true"

            android:drawablePadding="15px"
            android:drawableTop="@drawable/tools_routing"
            android:gravity="center"
            android:text="巡检"
            android:textColor="@color/font_black"
            android:textSize="39px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black_line" />

        <View
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <View
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_line" />
</LinearLayout>