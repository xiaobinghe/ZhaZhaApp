<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.locensate.letnetwork.main.ui.message.MessageActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="@color/bg_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="168px"
        android:background="@color/bg_head"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_message_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="45px"
            android:paddingRight="45px"
            android:src="@drawable/back_white"  />

        <TextView
            android:id="@+id/tv_message_title_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="start"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="45px"
            android:paddingRight="45px"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:padding="15dp"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

    <com.locensate.letnetwork.view.LetIndicate
        android:id="@+id/indicator_message_activity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

    </com.locensate.letnetwork.view.LetIndicate>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_message_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
